<body>
    <div class = "box">
  <h2> Cálculo do IMC </h2>
  <label for = "peso"> Peso (Kg): </label><br>
  <input type = "number" id = "peso">  <br>

  <label for = "altura"> Altura (m): </label><br>
  <input type = "number" id = "altura"> <br>

  <button type = "button" onclick = "calcularIMC()"> Calcular IMC </button>

  <p id = "resultado"> </p>
    </div>
  <script>
    function calcularIMC() {
      const peso = Number(document.getElementById('peso').value);
      const altura = Number(document.getElementById('altura').value);
      const imc = peso/(altura * altura);
      document.getElementById('resultado').innerText = `Seu IMC é: ${imc.toFixed(2)}`;
    }
  </script>
