<!DOCTYPE html>
<html lang= "pt-BR">
<head>
  <title> Questão 2 </title>
  <meta charset="UTF-8">
</head>
<body>

  <h2> Soma de Dois Números </h2>

  <label for="valor1">Digite o primeiro numero</label><br>
  <input type="number" id="valor1"><br>

  <label for="valor2">Digite o segundo numero</label><br>
  <input type="number" id="valor2"><br>

  <button type="button" onclick="somar()">Somar</button>

  <p id="resultado"></p>

  <script>
    function somar(){
        const n1 = Number(document.getElementById('valor1').value);
        const n2 = Number(document.getElementById('valor2').value);
        const resultado = n1 + n2;
        document.getElementById('resultado').innerText = "Resultado:" + resultado;
    }
  </script>
  
</body>
</html>
