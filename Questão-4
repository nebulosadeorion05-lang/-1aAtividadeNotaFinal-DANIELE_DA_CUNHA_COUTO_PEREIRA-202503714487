  <script>
    function calcularIMC() {
      const peso = 
    Number(document.getElementByld('peso').value);
      const altura = 
    Number(document.getElementByld('altura').value);
      const imc = peso/(altura * altura);
      document.getElementByld('resultado').innerText = "Seu IMC é: " + imc.toFixed(2);
    }
  </script>
